<div class="min-h-screen bg-white px-4 py-8">
  <!-- Celebration Modal -->
  <% if @show_celebration %>
    <div id="celebration-modal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
      <div class="bg-white rounded-3xl p-8 max-w-md mx-4 text-center relative overflow-hidden">
        <!-- Animated confetti background -->
        <div class="absolute inset-0 pointer-events-none">
          <div class="confetti-piece" style="left: 10%; animation-delay: 0s;"></div>
          <div class="confetti-piece" style="left: 20%; animation-delay: 0.5s;"></div>
          <div class="confetti-piece" style="left: 30%; animation-delay: 1s;"></div>
          <div class="confetti-piece" style="left: 40%; animation-delay: 0.3s;"></div>
          <div class="confetti-piece" style="left: 50%; animation-delay: 0.8s;"></div>
          <div class="confetti-piece" style="left: 60%; animation-delay: 0.2s;"></div>
          <div class="confetti-piece" style="left: 70%; animation-delay: 0.7s;"></div>
          <div class="confetti-piece" style="left: 80%; animation-delay: 0.4s;"></div>
          <div class="confetti-piece" style="left: 90%; animation-delay: 0.9s;"></div>
        </div>
        
        <!-- Celebration content -->
        <div class="relative z-10">
          <div class="text-6xl mb-4 animate-bounce">üéâ</div>
          <h2 class="text-3xl font-bold text-gray-900 mb-4" id="celebration-title">
            FANTASTIC!
          </h2>
          <p class="text-xl text-gray-700 mb-2 animate-fade-in">
            Hey <%= @child.name %>, you completed
          </p>
          <p class="text-2xl font-bold text-green-600 mb-6 animate-fade-in" style="animation-delay: 0.5s;">
            ALL YOUR CHORES TODAY! 
          </p>
          <div class="text-4xl mb-6 animate-fade-in" style="animation-delay: 1s;">‚≠ê üèÜ ‚≠ê</div>
          <p class="text-gray-600 mb-8 animate-fade-in" style="animation-delay: 1.5s;">
            You're being so responsible and helpful!<br>
            Your family is proud of you! üíù
          </p>
          <button onclick="closeCelebration()" 
                  class="bg-green-500 text-white px-8 py-3 rounded-full text-lg font-semibold hover:bg-green-600 transition-all transform hover:scale-105 animate-fade-in"
                  style="animation-delay: 2s;">
            Awesome!
          </button>
        </div>
      </div>
    </div>

    <style>
      @keyframes confetti-fall {
        0% {
          transform: translateY(-100vh) rotate(0deg);
          opacity: 1;
        }
        100% {
          transform: translateY(100vh) rotate(720deg);
          opacity: 0;
        }
      }
      
      .confetti-piece {
        position: absolute;
        width: 10px;
        height: 10px;
        background: linear-gradient(45deg, #ff6b6b, #4ecdc4, #45b7d1, #f9ca24, #f0932b);
        animation: confetti-fall 3s linear infinite;
        top: -10px;
      }
      
      .confetti-piece:nth-child(odd) {
        background: linear-gradient(45deg, #6c5ce7, #a29bfe, #fd79a8, #fdcb6e);
        width: 8px;
        height: 8px;
      }
      
      .confetti-piece:nth-child(3n) {
        background: linear-gradient(45deg, #00b894, #00cec9, #e17055, #74b9ff);
        width: 6px;
        height: 6px;
      }
    </style>
  <% end %>

  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="flex justify-between items-start mb-8">
      <div>
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-2">
          <% if @viewing_yesterday %>
            Yesterday's Chores
          <% else %>
            Today's Chores
          <% end %>
        </h1>
        <p class="text-lg text-gray-600">
          Profile: <%= @child.name.downcase %><br>
          <% if @viewing_yesterday %>
            <span class="text-sm">Viewing: <%= @viewing_date.strftime("%B %d, %Y") %></span>
          <% else %>
            <span class="text-sm"><%= Date.current.strftime("%A, %B %d, %Y") %></span>
          <% end %>
        </p>
      </div>
      <div class="flex space-x-3">
        <% unless @viewing_yesterday %>
          <%= link_to child_kiosk_path(@child, date: Date.current - 1.day), class: "inline-block" do %>
            <button class="bg-blue-500 text-white px-6 py-2 rounded-lg font-semibold hover:bg-blue-600 transition-colors">
              Yesterday
            </button>
          <% end %>
        <% else %>
          <%= link_to child_kiosk_path(@child), class: "inline-block" do %>
            <button class="bg-green-500 text-white px-6 py-2 rounded-lg font-semibold hover:bg-green-600 transition-colors">
              Today
            </button>
          <% end %>
        <% end %>
        <%= link_to child_kiosk_index_path, class: "inline-block" do %>
          <button class="bg-gray-200 text-gray-700 px-6 py-2 rounded-lg font-semibold hover:bg-gray-300 transition-colors">
            Switch Child
          </button>
        <% end %>
      </div>
    </div>

    <% if @today_chore_list && @today_chore_list.chore_completions.any? %>
      <!-- Progress Summary (moved to top) -->
      <div class="mb-8 bg-gray-50 rounded-2xl p-6">
        <% completed_count = @today_chore_list.chore_completions.select(&:completed?).count %>
        <% total_count = @today_chore_list.chore_completions.count %>
        <h3 class="text-2xl font-bold text-gray-900 mb-4">
          Progress
        </h3>
        <div class="flex justify-between items-center mb-2">
          <span class="text-gray-600">Completion</span>
          <span class="text-2xl font-bold text-gray-900"><%= ((completed_count.to_f / total_count * 100).round) %>%</span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-4">
          <div class="bg-green-500 h-4 rounded-full transition-all duration-300" style="width: <%= (completed_count.to_f / total_count * 100).round(1) %>%"></div>
        </div>
      </div>
      <!-- Chore List -->
      <div class="space-y-4">
        <% @today_chore_list.chore_completions.each do |completion| %>
          <div class="bg-white border-2 border-gray-200 rounded-2xl p-6 flex items-center justify-between">
            <div class="flex items-center space-x-4">
              <!-- Completion Status -->
              <% if completion.completed? && !completion.reviewed_at? %>
                <div class="w-8 h-8 rounded-full border-2 bg-orange-500 border-orange-500 flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </div>
              <% elsif completion.reviewed_satisfactory? %>
                <div class="w-8 h-8 rounded-full border-2 bg-green-500 border-green-500 flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </div>
              <% elsif completion.reviewed_unsatisfactory? %>
                <div class="w-8 h-8 rounded-full border-2 bg-red-500 border-red-500 flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                  </svg>
                </div>
              <% else %>
                <div class="w-8 h-8 rounded-full border-2 border-gray-300 flex items-center justify-center">
                </div>
              <% end %>
              
              <!-- Chore Info -->
              <div class="flex-1">
                <h3 class="text-xl font-semibold text-gray-900">
                  <%= completion.chore.name %>
                </h3>
                <% if completion.completed? && !completion.reviewed_at? %>
                  <p class="text-orange-600 text-sm font-medium">
                    Completed - awaiting parent review
                  </p>
                <% elsif completion.reviewed_satisfactory? %>
                  <p class="text-green-600 text-sm font-medium">
                    ‚úì Approved by parent
                  </p>
                  <% if completion.review_notes.present? %>
                    <p class="text-green-700 text-sm mt-1 italic">
                      "üìù <%= completion.review_notes %>"
                    </p>
                  <% end %>
                <% elsif completion.reviewed_unsatisfactory? %>
                  <p class="text-red-600 text-sm font-medium">
                    ‚ö† Needs to be redone
                  </p>
                  <% if completion.review_notes.present? %>
                    <p class="text-red-700 text-sm mt-1 italic">
                      "üìù <%= completion.review_notes %>"
                    </p>
                  <% end %>
                <% else %>
                  <p class="text-gray-600 text-sm">
                    <% if completion.chore.chore_type == "constant" %>
                      Daily responsibility
                    <% else %>
                      Your turn today
                    <% end %>
                  </p>
                  <% if completion.review_notes.present? %>
                    <p class="text-blue-700 text-sm mt-1 italic">
                      "üìù <%= completion.review_notes %>"
                    </p>
                  <% end %>
                <% end %>
              </div>
            </div>

            <!-- Action Button -->
            <% if @viewing_yesterday %>
              <div class="text-gray-500 px-6 py-2 text-sm">
                <% if completion.reviewed_satisfactory? %>
                  ‚úì Good Job!
                <% elsif completion.reviewed_unsatisfactory? %>
                  ‚ö† Needed Work
                <% elsif completion.completed? %>
                  ‚úì Completed
                <% else %>
                  ‚Äï Not Done
                <% end %>
              </div>
            <% elsif completion.completed? && !completion.reviewed_at? %>
              <%= form_with url: uncomplete_chore_child_kiosk_path(@child), method: :patch, local: true, class: "inline" do |f| %>
                <%= f.hidden_field :completion_id, value: completion.id %>
                <button type="submit" class="bg-orange-500 text-white px-6 py-2 rounded-lg font-semibold hover:bg-orange-600 transition-colors">
                  Undo
                </button>
              <% end %>
            <% elsif !completion.completed? %>
              <%= form_with url: complete_chore_child_kiosk_path(@child), method: :patch, local: true, class: "inline" do |f| %>
                <%= f.hidden_field :completion_id, value: completion.id %>
                <button type="submit" class="bg-green-500 text-white px-6 py-2 rounded-lg font-semibold hover:bg-green-600 transition-colors">
                  Mark Done
                </button>
              <% end %>
            <% elsif completion.reviewed_at? %>
              <div class="text-gray-500 px-6 py-2 text-sm">
                <% if completion.reviewed_satisfactory? %>
                  ‚úì Reviewed - Good Job!
                <% elsif completion.reviewed_unsatisfactory? %>
                  ‚ö† Needs Improvement
                <% else %>
                  ‚è≥ Under Review
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Extras Section -->
      <% if @available_extras.any? %>
        <div class="mt-12">
          <div class="text-center mb-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-2">üí∞ Extra Tasks</h2>
            <p class="text-gray-600">Optional tasks you can do to earn money!</p>
          </div>

          <div class="space-y-4">
            <% @available_extras.each do |extra_data| %>
              <% extra = extra_data[:extra] %>
              <% completion = extra_data[:completion] %>
              <% can_complete = extra_data[:can_complete] %>
              
              <div class="bg-green-50 border-2 border-green-200 rounded-2xl p-6 flex items-center justify-between">
                <div class="flex items-center space-x-4">
                  <!-- Completion Status -->
                  <div class="w-8 h-8 rounded-full border-2 flex items-center justify-center <%= completion ? 'bg-green-500 border-green-500' : 'border-green-300' %>">
                    <% if completion %>
                      <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                    <% else %>
                      <div class="w-2 h-2 bg-green-400 rounded-full"></div>
                    <% end %>
                  </div>
                  
                  <!-- Extra Info -->
                  <div>
                    <h3 class="text-xl font-semibold text-gray-900">
                      <%= extra.title %>
                    </h3>
                    <p class="text-green-600 font-bold">
                      $<%= sprintf("%.2f", extra.reward_amount) %>
                    </p>
                    <% if extra.description.present? %>
                      <p class="text-gray-600 text-sm mt-1">
                        <%= extra.description %>
                      </p>
                    <% end %>
                  </div>
                </div>

                <!-- Action Button -->
                <% if can_complete %>
                  <%= form_with url: complete_extra_child_kiosk_path(@child), method: :patch, local: true, class: "inline" do |f| %>
                    <%= f.hidden_field :extra_id, value: extra.id %>
                    <button type="submit" class="bg-green-500 text-white px-6 py-2 rounded-lg font-semibold hover:bg-green-600 transition-colors">
                      Earn $<%= sprintf("%.2f", extra.reward_amount) %>
                    </button>
                  <% end %>
                <% elsif completion %>
                  <div class="text-green-600 font-semibold px-6 py-2">
                    <% if completion.approved? %>
                      ‚úì Approved - Earned!
                    <% elsif completion.rejected? %>
                      ‚úó Rejected
                    <% else %>
                      ‚è≥ Awaiting Approval
                    <% end %>
                  </div>
                <% else %>
                  <div class="text-gray-400 px-6 py-2">
                    Not Available
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

    <% else %>
      <!-- No Chores -->
      <div class="text-center py-16">
        <% if @viewing_yesterday %>
          <div class="text-6xl mb-4">üìù</div>
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            No chores from yesterday
          </h2>
          <p class="text-xl text-gray-600">
            Either chores weren't generated or there were no chores assigned to you yesterday.
          </p>
        <% else %>
          <div class="text-6xl mb-4">‚è≥</div>
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Chores haven't been generated yet!
          </h2>
          <p class="text-xl text-gray-600">
            Ask a parent to generate today's chores, <%= @child.name %>!
          </p>
        <% end %>
      </div>
    <% end %>

    <!-- Bottom Navigation -->
    <div class="mt-12 flex justify-center space-x-4">
      <%= link_to new_adult_session_path, class: "inline-block" do %>
        <button class="bg-gray-900 text-white px-8 py-3 rounded-lg font-semibold hover:bg-gray-800 transition-colors">
          Parent Login
        </button>
      <% end %>
      <%= link_to child_kiosk_index_path, class: "inline-block" do %>
        <button class="bg-gray-200 text-gray-700 px-8 py-3 rounded-lg font-semibold hover:bg-gray-300 transition-colors">
          Home
        </button>
      <% end %>
    </div>
  </div>
</div>

<% if @show_celebration %>
  <script>
    function closeCelebration() {
      document.getElementById('celebration-modal').style.display = 'none';
      // Remove celebration parameter from URL
      const url = new URL(window.location);
      url.searchParams.delete('celebration');
      window.history.replaceState({}, document.title, url.pathname + url.search);
    }
    
    // Auto-close celebration after 10 seconds if child doesn't click
    setTimeout(() => {
      const modal = document.getElementById('celebration-modal');
      if (modal && modal.style.display !== 'none') {
        closeCelebration();
      }
    }, 10000);
  </script>
<% end %>