<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-6">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">
            Chore History
          </h1>
          <p class="text-gray-600 mt-1">
            View past chore assignments and completion status
          </p>
        </div>
        
        <div class="flex items-center space-x-4">
          <%= link_to admin_root_path, class: "bg-blue-500 text-white px-4 py-2 rounded-lg font-semibold hover:bg-blue-600 transition-colors" do %>
            ← Back to Dashboard
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- Filters -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-8">
      <h2 class="text-xl font-bold text-gray-900 mb-4">Filters</h2>
      
      <%= form_with url: admin_history_index_path, method: :get, local: true, class: "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4" do |form| %>
        <!-- Date Range -->
        <div>
          <%= form.label :start_date, "Start Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.date_field :start_date, value: @start_date, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        
        <div>
          <%= form.label :end_date, "End Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.date_field :end_date, value: @end_date, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        
        <!-- Child Filter -->
        <div>
          <%= form.label :child_id, "Child", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.select :child_id, 
                options_from_collection_for_select(@children, :id, :name, @selected_child_id), 
                { prompt: "All Children" }, 
                { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } %>
        </div>
        
        <!-- Status Filter -->
        <div>
          <%= form.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.select :status, 
                options_for_select([
                  ["All Statuses", ""],
                  ["Pending", "pending"],
                  ["Completed", "completed"],
                  ["Reviewed Satisfactory", "reviewed_satisfactory"],
                  ["Reviewed Unsatisfactory", "reviewed_unsatisfactory"]
                ], @selected_status), 
                {}, 
                { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } %>
        </div>
        
        <!-- Submit Button -->
        <div class="flex items-end">
          <%= form.submit "Filter", class: "w-full bg-blue-500 text-white px-4 py-2 rounded-md font-semibold hover:bg-blue-600 transition-colors" %>
        </div>
      <% end %>
    </div>

    <!-- Summary Statistics -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 mb-8">
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 text-center">
        <div class="text-2xl font-bold text-blue-600"><%= @summary_stats[:total_chores] %></div>
        <div class="text-sm text-gray-600">Total Chores</div>
      </div>
      
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 text-center">
        <div class="text-2xl font-bold text-green-600"><%= @summary_stats[:completed_chores] %></div>
        <div class="text-sm text-gray-600">Completed</div>
      </div>
      
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 text-center">
        <div class="text-2xl font-bold text-yellow-600"><%= @summary_stats[:pending_chores] %></div>
        <div class="text-sm text-gray-600">Pending</div>
      </div>
      
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 text-center">
        <div class="text-2xl font-bold text-green-700"><%= @summary_stats[:satisfactory_chores] %></div>
        <div class="text-sm text-gray-600">Satisfactory</div>
      </div>
      
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 text-center">
        <div class="text-2xl font-bold text-red-600"><%= @summary_stats[:unsatisfactory_chores] %></div>
        <div class="text-sm text-gray-600">Unsatisfactory</div>
      </div>
      
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 text-center">
        <div class="text-2xl font-bold text-orange-600"><%= @summary_stats[:needs_review] %></div>
        <div class="text-sm text-gray-600">Needs Review</div>
      </div>
    </div>

    <!-- Chore History Table -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-bold text-gray-900">
          Chore History 
          <span class="text-sm font-normal text-gray-600">
            (Showing last 100 entries)
          </span>
        </h2>
      </div>
      
      <% if @chore_completions.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Date
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Child
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Chore
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Difficulty
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Status
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Completed
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Reviewed
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @chore_completions.each do |completion| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= completion.assigned_date.strftime("%m/%d/%Y") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="w-8 h-8 rounded-full flex items-center justify-center text-white text-sm font-medium" 
                           style="background-color: <%= completion.child.avatar_color %>;">
                        <%= completion.child.name.first %>
                      </div>
                      <div class="ml-3">
                        <div class="text-sm font-medium text-gray-900">
                          <%= completion.child.name %>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-900">
                    <div class="font-medium"><%= completion.chore.title %></div>
                    <% if completion.chore.chore_type == "rotational" %>
                      <div class="text-xs text-blue-600">Rotational</div>
                    <% else %>
                      <div class="text-xs text-gray-500">Constant</div>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                      <% case completion.chore.difficulty %>
                      <% when "easy" %>
                        bg-green-100 text-green-800
                      <% when "medium" %>
                        bg-yellow-100 text-yellow-800
                      <% when "hard" %>
                        bg-red-100 text-red-800
                      <% end %>">
                      <%= completion.chore.difficulty.titleize %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                      <% case completion.status %>
                      <% when "pending" %>
                        bg-gray-100 text-gray-800
                      <% when "completed" %>
                        bg-blue-100 text-blue-800
                      <% when "reviewed_satisfactory" %>
                        bg-green-100 text-green-800
                      <% when "reviewed_unsatisfactory" %>
                        bg-red-100 text-red-800
                      <% end %>">
                      <%= completion.status.humanize %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <% if completion.completed_at %>
                      <%= completion.completed_at.strftime("%m/%d %I:%M %p") %>
                    <% else %>
                      <span class="text-gray-400">—</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <% if completion.reviewed_at %>
                      <div><%= completion.reviewed_at.strftime("%m/%d %I:%M %p") %></div>
                      <% if completion.reviewed_by %>
                        <div class="text-xs text-gray-500">by <%= completion.reviewed_by.first_name %></div>
                      <% end %>
                    <% else %>
                      <span class="text-gray-400">—</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="px-6 py-12 text-center">
          <div class="text-gray-500">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No chore history found</h3>
            <p class="mt-1 text-sm text-gray-500">Try adjusting your filters to see more results.</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>