<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-6">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">
            Family Settings
          </h1>
          <p class="text-gray-600 mt-1">
            Configure payouts and chore values
          </p>
        </div>
        
        <div class="flex items-center space-x-4">
          <%= link_to admin_root_path, 
                      class: "text-gray-600 hover:text-gray-900 font-medium" do %>
            ‚Üê Back to Dashboard
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <%= form_with model: @family_setting, url: admin_settings_path, local: true, method: :patch, class: "space-y-8" do |form| %>
      <% if @family_setting.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <h3 class="text-red-800 font-medium">Please fix the following errors:</h3>
          <ul class="text-red-700 text-sm mt-2 list-disc list-inside">
            <% @family_setting.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Payout Settings -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h2 class="text-xl font-bold text-gray-900 mb-6">üí∞ Payout Settings</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :payout_frequency, "Payout Frequency", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :payout_frequency, 
                            options_for_select([
                              ["Weekly", "weekly"],
                              ["Bi-weekly (Every 2 weeks)", "biweekly"], 
                              ["Monthly", "monthly"]
                            ], @family_setting.payout_frequency),
                            {},
                            { class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" } %>
          </div>
          
          <div>
            <%= form.label :payout_day, "Payout Day", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :payout_day,
                            options_for_select([
                              ["Sunday", 0],
                              ["Monday", 1],
                              ["Tuesday", 2],
                              ["Wednesday", 3],
                              ["Thursday", 4],
                              ["Friday", 5],
                              ["Saturday", 6]
                            ], @family_setting.payout_day),
                            {},
                            { class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" } %>
            <p class="text-sm text-gray-500 mt-1">
              Day of the week when you typically pay allowances
            </p>
          </div>
        </div>
      </div>

      <!-- General Settings -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h2 class="text-xl font-bold text-gray-900 mb-6">‚öôÔ∏è General Settings</h2>
        
        <div class="grid grid-cols-1 gap-6">
          <div>
            <%= form.label :auto_approve_after_hours, "Auto-approve Chores After (hours)", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.number_field :auto_approve_after_hours, 
                                  min: 0,
                                  class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
            <p class="text-sm text-gray-500 mt-1">
              Automatically approve chores after this many hours (0 = manual only)
            </p>
          </div>
        </div>
      </div>

      <!-- Current Settings Preview -->
      <div class="bg-blue-50 rounded-xl border border-blue-200 p-6">
        <h3 class="text-blue-900 font-semibold mb-4">üìã Current Settings Summary</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
          <div>
            <span class="font-medium text-blue-800">Payout Schedule:</span>
            <span class="text-blue-700">
              <%= @family_setting.payout_frequency_description %> on <%= @family_setting.payout_day_name %>s
            </span>
          </div>
          <div>
            <span class="font-medium text-blue-800">Auto-approve:</span>
            <span class="text-blue-700">
              <% if @family_setting.auto_approve_after_hours > 0 %>
                After <%= @family_setting.auto_approve_after_hours %> hours
              <% else %>
                Manual only
              <% end %>
            </span>
          </div>
        </div>
      </div>

      <!-- Save Button -->
      <div class="flex justify-end">
        <%= form.submit "Save Settings", 
                        class: "bg-blue-500 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-600 transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>