<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-6">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">New Extra Task</h1>
          <p class="text-gray-600 mt-1">Create an optional high-value task that earns money</p>
        </div>
        
        <div class="flex items-center space-x-4">
          <%= link_to admin_extras_path, class: "text-gray-600 hover:text-gray-800" do %>
            ‚Üê Back to Extras
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Form -->
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <%= form_with model: [:admin, @extra], local: true, class: "space-y-6" do |f| %>
        <% if @extra.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <h3 class="text-red-800 font-semibold">Please fix the following errors:</h3>
            <ul class="list-disc list-inside text-red-700 mt-2">
              <% @extra.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :title, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
          <p class="text-gray-500 text-xs mt-1">e.g., "Wash Car", "Clean Garage", "Organize Closet"</p>
        </div>

        <div>
          <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_area :description, rows: 3, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
          <p class="text-gray-500 text-xs mt-1">Detailed description of what needs to be done</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <%= f.label :reward_amount, "Reward Amount ($)", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.number_field :reward_amount, step: 0.01, min: 0.01, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
            <p class="text-gray-500 text-xs mt-1">How much money this extra task is worth</p>
          </div>

          <div>
            <%= f.label :max_completions, "Max Completions", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.number_field :max_completions, min: 1, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
            <p class="text-gray-500 text-xs mt-1">Leave blank for unlimited</p>
          </div>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900 mb-4">Availability Period</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <%= f.label :available_from, "Available From", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.date_field :available_from, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
            </div>

            <div>
              <%= f.label :available_until, "Available Until", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.date_field :available_until, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
            </div>
          </div>
          <p class="text-gray-500 text-sm mt-2">Set the date range when this extra task is available</p>
        </div>

        <div class="flex items-center">
          <%= f.check_box :active, class: "rounded border-gray-300 text-green-600 focus:ring-green-500" %>
          <%= f.label :active, "Active", class: "ml-2 text-sm font-medium text-gray-700" %>
          <p class="ml-6 text-gray-500 text-xs">Uncheck to create as draft</p>
        </div>

        <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
          <%= link_to "Cancel", admin_extras_path, 
                      class: "px-4 py-2 text-gray-600 hover:text-gray-800" %>
          <%= f.submit "Create Extra Task", 
                      class: "bg-green-500 text-white px-6 py-2 rounded-lg font-semibold hover:bg-green-600 transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>