<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-6">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">New Chore</h1>
          <p class="text-gray-600 mt-1">Create a new chore for your family</p>
        </div>
        
        <div class="flex items-center space-x-4">
          <%= link_to admin_chores_path, class: "text-gray-600 hover:text-gray-800" do %>
            ‚Üê Back to Chores
          <% end %>
          
          <div class="flex items-center space-x-3 border-l border-gray-300 pl-4">
            <p class="text-gray-700 text-sm">
              <%= current_adult.full_name %>
            </p>
            <%= link_to "Sign Out", destroy_adult_session_path, 
                        class: "bg-gray-900 text-white px-3 py-1 rounded text-sm font-semibold hover:bg-gray-800 transition-colors",
                        data: { "turbo-method": "delete" } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Form -->
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <%= form_with model: [:admin, @chore], local: true, class: "space-y-6" do |f| %>
        <% if @chore.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <h3 class="text-red-800 font-semibold">Please fix the following errors:</h3>
            <ul class="list-disc list-inside text-red-700 mt-2">
              <% @chore.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :title, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_area :description, rows: 3, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= f.label :instructions, "Detailed Instructions", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_area :instructions, rows: 4, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          <p class="text-gray-500 text-sm mt-1">Step-by-step instructions for children</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <%= f.label :chore_type, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.select :chore_type, 
                         [["Constant (daily for specific children)", "constant"], 
                          ["Rotational (rotates among children)", "rotational"]], 
                         { prompt: "Select type..." },
                         { class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
          </div>

          <div>
            <%= f.label :difficulty, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.select :difficulty, 
                         [["Easy", "easy"], ["Medium", "medium"], ["Hard", "hard"]], 
                         { prompt: "Select difficulty..." },
                         { class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <%= f.label :estimated_minutes, "Est. Minutes", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.number_field :estimated_minutes, min: 1, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>

          <div class="flex items-center pt-8">
            <%= f.check_box :active, class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
            <%= f.label :active, "Active", class: "ml-2 text-sm font-medium text-gray-700" %>
          </div>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900 mb-4">Age Requirements (Optional)</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <%= f.label :min_age, "Minimum Age", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.number_field :min_age, min: 1, max: 18, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
            </div>

            <div>
              <%= f.label :max_age, "Maximum Age", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.number_field :max_age, min: 1, max: 18, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
            </div>
          </div>
          <p class="text-gray-500 text-sm mt-2">Leave blank if appropriate for all ages</p>
        </div>

        <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
          <%= link_to "Cancel", admin_chores_path, 
                      class: "px-4 py-2 text-gray-600 hover:text-gray-800" %>
          <%= f.submit "Create Chore", 
                      class: "bg-blue-500 text-white px-6 py-2 rounded-lg font-semibold hover:bg-blue-600 transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>